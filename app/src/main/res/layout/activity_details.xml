<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/photo_restaurant" />

    <TextView
        android:id="@+id/detailTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="McDO"
        android:gravity="center"
        android:layout_marginTop="15dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:text="Fast Food"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="info@mcdo.fr"
        android:layout_marginHorizontal="20dp"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/bouton_email_on"
        android:paddingLeft="0dp"
        android:backgroundTint="@color/bleu_clair"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="0102030405"
        android:layout_marginHorizontal="20dp"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/bouton_tel_on"
        android:paddingLeft="0dp"
        android:backgroundTint="@color/bleu_clair"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="http://www.mcdo.fr"
        android:layout_marginHorizontal="20dp"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/bouton_site_on"
        android:paddingLeft="0dp"
        android:backgroundTint="@color/bleu_clair"/>


</LinearLayout>